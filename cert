<script type="text/javascript">
 function add1(){
 document.getElementById('text').value+='1';}
 function add2(){
 document.getElementById('text').value+='2';}
function add3(){
 document.getElementById('text').value+='3';}
function add4(){
 document.getElementById('text').value+='4';} 
function add5(){
 document.getElementById('text').value+='5';}
function add6(){
 document.getElementById('text').value+='6';}
function add7(){
 document.getElementById('text').value+='7';}
function add8(){
 document.getElementById('text').value+='8';}
function add9(){
 document.getElementById('text').value+='9';}
function add0(){
 document.getElementById('text').value+='0';}

function clearTextarea() {
	var textareaForm = document.getElementById("text");
  textareaForm.value = '';
}
function nextPage(){
const s = document.getElementById("text");
const v = s.value;
location.href=v+".html";
}
 </script>

<script>//inputで入力して値の表示
function showMsg(event) {
const s = document.getElementById("text");
const value = s.value.replace(/\\/g,"<br>").replace(/\*/g,"<font size=\"3\">");
showarea.innerHTML = value;
}
//inputのクリア
document.getElementById('text').value="";
//表示領域のクリア
showarea.innerHTML = "";
//'input' イベントが発生したとき showMsgを起動させる。
//'input' を 'change'に変えると Enter押下で showMsgを起動させることができる。
document.getElementById('text').addEventListener('input', showMsg);
</script>

 
